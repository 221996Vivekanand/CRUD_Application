<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title">Full Name: <%= product.fname %> <%= product.lname %></h1>
                        </header>
                        <div class="card__content">
                            <h2 class="product__price">Phone Number: <%= product.phone %></h2>
                            <p class="product__description">User Description: <%= product.description %></p>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>